<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/bootstrap.min.css">
    <script src="/jquery-3.1.1.min.js"></script>
    <script src="/bootstrap.min.js"></script>
</head>

<body>
    <div id="loading-view" class="loading" style="display: none;">
        <span class="loading-conten">正在加载中</span>
    </div>
    <div class="container">
        <div id="header">
            <h1 style="display: inline-block;">Task列表</h1>
            <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#myModal" style="float: right;margin-top: 10px;">Add Task</button>
        </div>
        <div id="tasks">
            <table class="table">
                <thead>
                    <tr>
                        <th>编号</th>
                        <th>说明</th>
                        <th>状态</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody id="task-list">
                    <!-- <tr>
                    <td scope="row">1</td>
                    <td>Mark</td>
                    <td>Otto</td>
                </tr> -->
                </tbody>
            </table>
        </div>
    </div>
    <input id="project-id" type="hidden" value="<%=id%>">
    <script type="text/javascript">
        $.post('/tasks/' + $("#project-id").val(), (result) => {
            for (task of result) {
                let state = ""
                if (task.result == 0) {
                    state = "等待打包"
                } else if (task.result == -1) {
                    state = "打包失败"
                } else if (task.result == 1) {
                    state = "打包成功"
                }
                if (task.isBuilding == true) {
                    state = "正在打包"
                }
                const taskDom = $(
                    `<tr>
                        <td>${task.id}</td>
                        <td>目前还没有</td>
                        <td>${state}</td>
                        <td><button type="button" class="btn btn-primary btn-sm">安装</button></td>
                    </tr>`
                )
                alert("2")
                $("#task-list").append(taskDom)
            }
        })
    </script>
</body>

</html>
